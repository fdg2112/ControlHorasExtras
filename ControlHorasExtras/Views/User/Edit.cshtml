@model ControlHorasExtras.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="NombreUsuario">Nombre de Usuario</label>
        <input type="text" id="NombreUsuario" name="NombreUsuario" class="form-control" value="@Model.NombreUsuario" required />
    </div>

    <div class="form-group">
        <label for="Contraseña">Contraseña</label>
        <input type="password" id="Contraseña" name="Contraseña" class="form-control" value="@Model.Contraseña" required />
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" id="Nombre" name="Nombre" class="form-control" value="@Model.Nombre" required />
    </div>

    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" id="Apellido" name="Apellido" class="form-control" value="@Model.Apellido" required />
    </div>

    <div class="form-group">
        <label for="RolID">Rol</label>
        <select id="RolID" name="RolID" class="form-control" required>
            <option value="">Seleccione un rol</option>
            @foreach (var rol in (IEnumerable<ControlHorasExtras.Models.Rol>)ViewData["Roles"])
            {
                <option value="@rol.RolId" selected="@((rol.RolId == Model.RolId) ? "selected" : "")">@rol.NombreRol</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="AreaID">Área</label>
        <select id="AreaID" name="AreaID" class="form-control">
            <option value="">Seleccione un área (opcional)</option>
            @foreach (var area in (IEnumerable<ControlHorasExtras.Models.Area>)ViewData["Areas"])
            {
                <option value="@area.AreaId" selected="@((area.AreaId == Model.AreaId) ? "selected" : "")">@area.NombreArea</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="SecretariaID">Secretaría</label>
        <select id="SecretariaID" name="SecretariaID" class="form-control" required>
            @foreach (var secretaria in (IEnumerable<ControlHorasExtras.Models.Secretaria>)ViewData["Secretarias"])
            {
                <option value="@secretaria.SecretariaId" selected="@((secretaria.SecretariaId == Model.SecretariaId) ? "selected" : "")">@secretaria.NombreSecretaria</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancelar</a>
</form>
